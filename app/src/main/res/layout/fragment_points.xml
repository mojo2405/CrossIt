<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.david.myapplication.ToolBar.Points"

    android:layout_width="130dp"
    android:layout_height="45dp"
    android:id="@+id/diamond_layout"

    android:background="@color/bluePrimary" >

    <ImageView
        android:layout_width="92dp"
        android:layout_height="98dp"
        android:src="@drawable/ribbon"
        android:id="@+id/DiamondRibbon"
        android:layout_marginStart="35dp"
        />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/diamond"
        android:id="@+id/DiamondSign"
        android:layout_marginStart="15dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/points"
        android:text="1234"
        android:textColor="@color/abc_primary_text_material_dark"
        android:layout_alignEnd="@+id/DiamondRibbon"
        android:layout_toEndOf="@+id/DiamondSign"
        android:layout_centerVertical="true"
        />

</RelativeLayout>