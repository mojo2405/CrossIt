<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/toolBar"
    android:clipChildren="false"
    tools:context=".ToolBar.ToolBarFragment">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal|top"
        android:clipChildren="false"
        android:background="@color/bluePrimary" >

        <fragment
            android:name="com.example.david.myapplication.ToolBar.Points"
            android:id="@+id/points_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_points"
            android:layout_gravity="center_horizontal|top"
        />

        <fragment
            android:name="com.example.david.myapplication.ToolBar.Energy"
            android:id="@+id/energy_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:layout_toEndOf="@+id/points_fragment"
            tools:layout="@layout/fragment_energy"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/dollar_layout"
            android:clipChildren="false"
            android:id="@+id/menuLayout">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/menubutton"
                android:id="@+id/MenuButton"

                android:layout_marginBottom="-30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:clickable="true" />
        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>
